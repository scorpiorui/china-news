/* pages/detail/detail.wxss */
.header{
  display: flex;
  height: 150rpx;
  background-color: #4db8ff
}
.header-image{
  margin:70rpx 15rpx 10rpx;
  width:70rpx;
  height: 70rpx;
}
.header-title{
  margin:80rpx 0 20rpx;
  font-size:40rpx;
  line-height: 56rpx;
  color: white;
}

.title{
  font-size: 48rpx;
  line-height: 67rpx;
  margin:30rpx 15rpx 30rpx 15rpx;
}
.addition-wrapper{
  position: relative;
  display: flex;
  margin:0 30rpx 30rpx 15rpx;
  font-size:30rpx;
  line-height: 30rpx;
  opacity: 0.8;
}
.source{
  margin-right:30rpx;
}
.readCount{
  position: absolute;
  right:0;
  margin-left: 30rpx;
  text-align: right;
}

.content{
  margin:60rpx 30rpx 0 30rpx;
}
.content-text{
  text-indent: 2em;
  text-align:justify; 
  font-size:38rpx;
  line-height: 53rpx;
  margin-bottom: 38rpx
}
.content-image{
  margin-bottom:0;
  width: 690rpx;
}

/* 有的图片下方并不是注释，但是type都是p，如何区分出来呢？暂时只能做align的区别。 */
.content-image-text{
  text-align:center; 
  font-size:38rpx;
  line-height: 53rpx;
  margin: 30rpx 0 38rpx;
}
.content-strong{
  font-size:40rpx;
  line-height: 56rpx;
  font-weight: bold;
  color: white;
  text-align: center;
  margin:76rpx 0 40rpx;
  background-color: #4db8ff;
}