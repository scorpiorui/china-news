.news-title{
  margin-right: 260rpx;
  font-size: 38rpx;
  line-height: 53rpx;
}
.news-add-wrapper,.first-news-add-wrapper{
  position: absolute;
  bottom: 30rpx;
  opacity: 0.8;
  font-size: 30rpx;
  line-height: 30rpx;
  display: flex;
}
.news-time,.first-news-time{
  margin-left:15rpx;
}
.news-image{
  position: absolute;
  right:30rpx;
  height:150rpx;
  width: 200rpx;
}

/**定义第一个元素**/
.first-news-item{
  position: relative;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  height: 560rpx;
}

.first-news-title{
  position:absolute;
  bottom:100rpx;
  margin: 0 45rpx 0 45rpx;
  font-size: 38rpx;
  line-height: 53rpx;
  color: white;
  background-color: rgba(0, 0, 0, 0.5);
}
.first-news-add-wrapper{
  color: white;
  bottom: 40rpx;
  margin-left: 45rpx;
  background-color: rgba(0, 0, 0, 0.5);
}

.first-news-image{
  width: 700rpx; /**为什么超出去反而border可以是透明**/
  height: 500rpx;
  border: 30rpx solid rgba(255, 255, 255, .2)
}

.first-news-backImage{
  position: absolute;
  top:0;
  opacity: 0.2;
  width: 100%;
  height: 100%;
  z-index: -1;
}