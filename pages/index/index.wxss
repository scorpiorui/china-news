/**index.wxss**/
.nav-bar{
  display: flex;
  background:linear-gradient(#4db8ff, #1aa3ff);
  line-height: 100rpx;
}
.nav{
  margin:0 15rpx 0 15rpx;
  color: white;
  font-size: 38rpx;
}

.news-item{
  display: flex;
  margin: 30rpx 0 0 15rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  position: relative;
  height: 260rpx;
}
